{
	"compilerOptions": {
		"target": "esnext",
        "module": "es2022",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"checkJs": true,
		"removeComments": false,
        "resolveJsonModule": true,
		"noEmit": true
	},
    "exclude": [
        "node_modules",
        "dist"
    ],
}
