{
  "name": "ps",
  "version": "1.1.0",
  "module": "src/index.js",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.9",
    "@types/sizeof": "^1.0.3",
    "chalk": "^5.6.2",
    "esbuild": "0.27.2",
    "esbuild-plugin-tsc": "^0.5.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sizeof": "^1.0.0",
    "tailwindcss": "^4.1.18",
    "typescript-eslint": "^8.53.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "description": "PuréScript (no confundir con PureScript) es un lenguaje de scripting de comandos personalizados de servidor para Bot de Puré",
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "trailingComma": "all",
    "useTabs": true,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 100
  },
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "lint-staged",
    "build:node": "bun build ./src/index.ts --outdir ./dist --entry-naming \"[dir]/puréscript.bundle.node.js\" --format esm --plugins dts",
    "build:browser": "bun build ./src/index.ts --outdir ./dist --entry-naming \"[dir]/puréscript.bundle.js\" --target browser",
    "build:all": "bun run build:node && bun run build:browser"
  },
  "type": "module",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.88",
    "axios": "^1.13.2",
    "jiti": "^2.6.1"
  },
  "lint-staged": {
    "./src/**/*.{ts,js}": "eslint --cache --fix",
    "./src/**/*.js": "eslint --cache --fix"
  }
}
